<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#1C82B3">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/ll_main"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_complainantname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        android:text="Complainant Name" />

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25 Aug 2018"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txt_complaintype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_main"
                    android:text="Complaint Type"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_main"
                    android:text="Status"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_complaintype"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/view_complaint"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/baseline_remove_red_eye_white_18dp"
                        android:padding="8dp"
                        android:background="@drawable/round_bg"
                        android:contentDescription="@null" />

                    <ImageView
                        android:id="@+id/edit_complaint"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/baseline_edit_white_18dp"
                        android:padding="9dp"
                        android:background="@drawable/round_bg"
                        android:contentDescription="@null"/>

                    <!--<Button
                        android:id="@+id/btn_view"
                        android:layout_width="125dp"
                        android:layout_height="31dp"
                        android:text="View Details"
                        android:textSize="12sp"
                        android:background="@drawable/button_round_background"
                        android:layout_marginTop="7dp"
                        android:textColor="#ffffff"/>-->
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>






    </RelativeLayout>
</android.support.v7.widget.CardView>